<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h3>words </h3>
    <table border="1" style="border-collapse:collapse;text-align: center;" cellpadding="15">
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>ADDRESS</th>
        </tr>

        <% arrWords.forEach(e=> {%>
            <tr>
                <td>
                    <%= e._id %>
                </td>

                <td>
                    <%= e.name %>
                </td>
                <td>
                    <%= e.address %>
                </td>
                <%});%>
            </tr>
    </table>
</body>

</html>